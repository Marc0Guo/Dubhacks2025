{
  "name": "AWS Console Navigator",
  "description": "An intelligent assistant to guide users through the AWS Console with visual navigation cues",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://console.aws.amazon.com/*",
    "https://*.console.aws.amazon.com/*",
    "https://api.thishurtyougave.select/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AWS Console Navigator",
    "default_icon": {
      "16": "icons/awspilot.png",
      "32": "icons/awspilot.png",
      "48": "icons/awspilot.png",
      "128": "icons/awspilot.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://console.aws.amazon.com/*",
        "https://*.console.aws.amazon.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "styles/*"],
      "matches": [
        "https://console.aws.amazon.com/*",
        "https://*.console.aws.amazon.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/awspilot.png",
    "32": "icons/awspilot.png",
    "48": "icons/awspilot.png",
    "128": "icons/awspilot.png"
  }
}
