# AWS Tutor - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_BEARER_TOKEN_BEDROCK=your-bedrock-api-key-here
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# =============================================================================
# Backend URLs
# =============================================================================
# Node.js Backend
NODE_BACKEND_URL=https://api.thishurtyougave.select
NODE_BACKEND_LOCAL=http://localhost:3000/dev

# Python Bedrock Agent
PYTHON_AGENT_URL=http://localhost:5001
PYTHON_AGENT_PRODUCTION=https://your-python-agent-url.com

# =============================================================================
# Development Configuration
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# =============================================================================
# Chrome Extension Configuration
# =============================================================================
EXTENSION_ID=your-extension-id
EXTENSION_VERSION=1.0.0

# =============================================================================
# Bedrock Model Configuration
# =============================================================================
BEDROCK_MODEL_ID=amazon.titan-text-express-v1
BEDROCK_MAX_TOKENS=1000
BEDROCK_TEMPERATURE=0.7

# =============================================================================
# API Configuration
# =============================================================================
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
CORS_ORIGINS=http://localhost:3000,http://localhost:5001

# =============================================================================
# Database Configuration (if needed)
# =============================================================================
# DATABASE_URL=your-database-url
# REDIS_URL=your-redis-url

# =============================================================================
# Monitoring & Analytics
# =============================================================================
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_ID=your-analytics-id
